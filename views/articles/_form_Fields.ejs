<!-- views/blogs/_form_Fields.ejs -->

<div class="form-group">
  <label for="title">Title</label>
  <input
    type="text"
    class="form-control"
    id="title"
    name="title"
    placeholder="Enter blog title"
    required
    value="<%= article.title %>"
  />
</div>

<!-- Add a description field -->
<div class="form-group">
  <label for="description">Description</label>
  <textarea
    class="form-control"
    id="description"
    name="description"
    placeholder="Enter a brief description of the blog"
    style="resize: none"
    required
  >
<%= article.description %></textarea
  >
</div>

<div class="form-group">
  <label for="editor">Content</label>
  <div id="editor" name="content"><%= article.content %></div>
</div>

<div class="form-group">
  <label for="image">Upload Image</label>
  <input
    type="file"
    class="form-control-file"
    id="image"
    name="image"
    onchange="previewImage()"
    value="<%= article.image %>"
    required
  />
</div>
<div id="imagePreviewContainer" style="display: none">
  <h5>Image Preview:</h5>
  <img
    id="imagePreview"
    alt="Image Preview"
    style="max-width: 100%; max-height: 150px"
  />
</div>
<a href="/articles" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Publish</button>
